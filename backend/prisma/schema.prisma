generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String    @db.VarChar(255)
  description String?
  thumbnail   String?
  fileName    String?
  filePath    String?
  url         String?
  views       Int?      @default(0)
  likes       Int?      @default(0)
  duration    String?
  status      Boolean   @default(false)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  comment     Comment[]
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  username String
  name     String?
  videos   Video[]
  profile  Profile?
  comment  Comment[]
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

model Comment {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  text      String
  userId    Int
  videoId   Int
  user      User     @relation(fields: [userId], references: [id])
  video     Video    @relation(fields: [videoId], references: [id])
}
